<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%- welcome_index_path %>
<%= form_for @comment, url:post_comments_path(@post) do |f| %>
<%= f.text_area :text_area %>
<%= f.submit %>
<% end %>

<%- @post.comments.each do |comment| %>
	<div>
		<%= comment.text_area %>
	</div>
<% end %>